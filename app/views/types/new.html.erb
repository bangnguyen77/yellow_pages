<h1>New Type</h1>

<% if @type.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @type.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @type do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit  %>
<% end %>
